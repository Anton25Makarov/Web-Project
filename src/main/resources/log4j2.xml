<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="3">

    <appenders>
        <File name="FILE" fileName="WEB-INF/classes/logs/application.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </File>
    </appenders>

    <loggers>
        <root level="debug">
            <appender-ref ref="FILE"/>
        </root>
    </loggers>

</configuration>